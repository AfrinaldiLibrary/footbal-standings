<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_table"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_club"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="Persib"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_no"
            app:layout_constraintWidth_percent="0.18" />

        <TextView
            android:id="@+id/tv_match"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="1"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_club"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_win"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="1"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_match"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_draw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_win"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_lose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_draw"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_goal_win"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="4"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_lose"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_goal_lose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_goal_win"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/retangle"
            android:gravity="center"
            android:text="3"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_goal_lose"
            app:layout_constraintWidth_percent="0.12" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>